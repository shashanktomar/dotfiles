#!/bin/bash

STATUS=$1
MESSAGE=$2

# color values can be found https://github.com/muesli/termenv#template-helpers

case $STATUS in
ACTION)
  echo -e '{{ Foreground "#ff87ff" (Bold "üëâ ACTION") }}' "${MESSAGE}\n" |
    gum format -t template
  ;;
INFO)
  echo -e '{{ Foreground "#00d7ff" (Bold "‚ÑπÔ∏è INFO") }}' "${MESSAGE}\n" |
    gum format -t template
  ;;
OK)
  echo -e '{{ Foreground "#5fd787" (Bold "‚úÖ OK") }}' "${MESSAGE}\n" |
    gum format -t template
  ;;
WARN | WARNING)
  echo -e '{{ Foreground "#ffaf00" (Bold "‚ö†Ô∏è Warning") }}' "${MESSAGE}\n" |
    gum format -t template
  ;;
ERROR | ERR)
  echo -e '{{ Foreground "#ff005f" (Bold "‚ùå Error") }}' "${MESSAGE}\n" |
    gum format -t template
  ;;
*)
  echo -e "${MESSAGE}\n"
  ;;
esac
