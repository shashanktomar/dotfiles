#!/bin/bash

STATUS=$1
MESSAGE=$2

# color values can be found https://github.com/muesli/termenv#template-helpers

case $STATUS in
ACTION)
  printf '{{ Foreground "#ff87ff" (Bold "üëâ ACTION") }} %s\n' "${MESSAGE}" |
    gum format -t template && echo ""
  ;;
INFO)
  printf '{{ Foreground "#00d7ff" (Bold "‚ÑπÔ∏è INFO") }} %s\n' "${MESSAGE}" |
    gum format -t template && echo ""
  ;;
OK)
  printf '{{ Foreground "#5fd787" (Bold "‚úÖ OK") }} %s\n' "${MESSAGE}" |
    gum format -t template --no-strip-ansi && echo ""
  ;;
WARN | WARNING)
  printf '{{ Foreground "#ffaf00" (Bold "‚ö†Ô∏è Warning") }} %s\n' "${MESSAGE}" |
    gum format -t template && echo ""
  ;;
ERROR | ERR)
  printf '{{ Foreground "#ff005f" (Bold "‚ùå Error") }} %s\n' "${MESSAGE}" |
    gum format -t template && echo ""
  ;;
*)
  printf '%s\n' "${MESSAGE}" && echo ""
  ;;
esac
